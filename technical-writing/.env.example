# WordPress Publishing Configuration
# Copy this to your shell profile (~/.zshrc, ~/.bashrc, etc.) and fill in your values

# Your WordPress site URL (include https://)
export WORDPRESS_URL="https://yourblog.com"

# Your WordPress username
export WORDPRESS_USERNAME="your_username"

# WordPress Application Password (NOT your regular password!)
# Generate at: WordPress.com → Account Settings → Security → Application Passwords
export WORDPRESS_APP_PASSWORD="xxxx xxxx xxxx xxxx"
